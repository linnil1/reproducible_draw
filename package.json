        "@sveltejs/kit": "^2.37.1",
        "@sveltejs/vite-plugin-svelte": "^6.1.4",
        "@tailwindcss/postcss": "^4.1.13",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.13",
        "@types/luxon": "^3.7.1",
        "carta-md": "^4.11.1",
        "crypto-js": "^4.2.0",
        "luxon": "^3.7.2",
        "pcg-random": "^2.0.1",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "svelte": "^5.38.7",
